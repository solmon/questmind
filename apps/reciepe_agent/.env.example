# Environment variables for Recipe Agent

# OpenAI API Key (required for LLM functionality)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith (optional, for tracing and debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=recipe-agent

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Agent Configuration
AGENT_NAME=RecipeAgent
AGENT_VERSION=0.1.0

# Recipe Database (optional)
RECIPE_DB_URL=your_recipe_database_url_here

# External APIs (optional)
SPOONACULAR_API_KEY=your_spoonacular_api_key_here
EDAMAM_APP_ID=your_edamam_app_id_here
EDAMAM_APP_KEY=your_edamam_app_key_here
